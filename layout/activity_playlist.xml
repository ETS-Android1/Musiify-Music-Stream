<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E032D"
    tools:context=".GenresActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Playlist"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="30dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="213dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/repeatsong"
                            android:layout_width="155dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:background="@drawable/btnplaylist_bg"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/repeat" />


                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRepeat"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:gravity="center"
                                android:text="My Repeats"
                                android:textColor="	#FF1493"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <ImageButton
                            android:id="@+id/sleepsong"
                            android:layout_width="155dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/btnplaylist_bg"
                            app:srcCompat="@drawable/sleep" />


                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtSleep"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:text="Sleep"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="	#FF1493"
                                android:textSize="20sp"
                                tools:ignore="DuplicateIds" />
                        </LinearLayout>


                        <ImageButton
                            android:id="@+id/studysong"
                            android:layout_width="155dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/btnplaylist_bg"
                            app:srcCompat="@drawable/study" />


                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtStudy"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:text="Study"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="	#FF1493"
                                android:textSize="20sp"
                                tools:ignore="DuplicateIds" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/partysong"
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/btnplaylist_bg"
                        app:srcCompat="@drawable/party" />


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtParty"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="Mood to Party"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="	#FF1493"
                            android:textSize="20sp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>


                    <ImageButton
                        android:id="@+id/emosong"
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/btnplaylist_bg"
                        app:srcCompat="@drawable/emo" />


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtEmo"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="Emotional"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="	#FF1493"
                            android:textSize="20sp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>


                    <ImageButton
                        android:id="@+id/popsong"
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/btnplaylist_bg"
                        app:srcCompat="@drawable/pop" />


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="107dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtPop"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="Pop"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="	#FF1493"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:orientation="vertical"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="427dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_main"
        tools:ignore="MissingConstraints">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>
